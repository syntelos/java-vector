<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title>Vector XS Demo</title>
    <style type="text/css">
      body {
        background-color: #FFF;
        font-family: sans-serif;
      }
      p, input, a {
        color: #000;
      }
      a {
        text-decoration: none;
      }
      p.title {
        margin-top: 20px;
      }
      p, div {
        margin-left: 40px;
      }
      div.invite {
        margin-top: 20px;
      }
      input {
        border: 1px solid #000;
      }
      input.email {
        font-family: monospace;
      }
    </style>
  </head>
  <body>
    <p class="title"> <b><a href="http://java-vector.googlecode.com/">vector</a></b> XMPP Service </p>
    <p class="description"> <code> <a href="http://java-vector.googlecode.com/git/demo/xmpp.jnlp">vector-xs@appspot.com</a></code>
    </p>
    <div class="invite">
      <form method="POST" action="/invite">
        <input class="email" id="email" type="text" name="address" />
        <input type="submit" value="invite" />
      </form>
    </div>
    <script type="text/javascript">
      var input = document.getElementById('email');
      if (input)
        input.focus();
    </script>
  </body>
</html>
